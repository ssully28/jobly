{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "company"
  ],
  "properties": {
    "company": {
      "$id": "#/properties/company",
      "type": "object",
      "title": "The Company Schema",
      "properties": {
        "handle": {
          "$id": "#/properties/company/properties/handle",
          "type": "string",
          "title": "The Handle Schema",
          "default": "",
          "examples": [
            "Yip"
          ],
          "pattern": "^(.*)$"
        },
        "name": {
          "$id": "#/properties/company/properties/name",
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": [
            "Yahoo"
          ],
          "pattern": "^(.*)$"
        },
        "num_employees": {
          "$id": "#/properties/company/properties/num_employees",
          "type": "integer",
          "title": "The Num_employees Schema",
          "default": 0,
          "examples": [
            20
          ]
        },
        "description": {
          "$id": "#/properties/company/properties/description",
          "type": "string",
          "title": "The Description Schema",
          "default": "",
          "examples": [
            "We put steves through the wringer"
          ],
          "pattern": "^(.*)$"
        },
        "logo_url": {
          "$id": "#/properties/company/properties/logo_url",
          "type": "string",
          "title": "The Logo_url Schema",
          "default": "",
          "examples": [
            "http://www.yahoo.com/image/logo.jpg"
          ],
          "pattern": "^(.*)$"
        }
      }
    }
  }
}